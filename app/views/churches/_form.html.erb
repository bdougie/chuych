<%= form_for @church do |f| %>
	<div class="form-group">
    <%= f.label :name, 'Church Name' %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :city, 'Location' %>
    <%= f.text_field :city, placeholder: 'Tampa, KS', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :latitude, 'In 3 or more words describe the church' %>
    <%= f.text_field :latitude, placeholder: 'Food, Fun, Fellowship', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 3, placeholder: 'Tell us about the church, we wont judge if you paste from the churches website. Just be sure to include a service time.', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

