<div class="list-group" id="post">
	<% church.posts.each do |post| %> 
			 	<!--<post.each does not work-->
	  <div class="list-group-item">
	    <h4 class="list-group-item-heading"><%= post.user.name %></h4>
	    	<div class='pull-left'>
	    		<img class="media-object"
				 	<%= image_tag(post.user.avatar.small.url, width: 50, height: 50)  %>>
				</div>
		    <p class="list-group-item-text" id='posts'>

			    <div class="media-body">
		    	<%= post.body %><br/>
		    	submitted <%= time_ago_in_words(post.created_at) %> ago by
				 	@<%= link_to post.user.username, '#' %>
				 </div>

				 	<!--<add link_to user_path, to the @username-->
		    </p>
	  </div>
  
  <% end %>
</div>
