#Post show

<h1><%= @post.user.name %></h1>

<% if can? :edit, @post %>
  <div class="pull-right">
  <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-block btn-default' %>
  
	<%= link_to "Delete", @topic, method: :delete, class: 'btn btn-large btn-block btn-danger', confirm: 'Are you sure you want to delete this topic?' %>
 	</div>
<% end %>

<p><%= @post.body %></p>