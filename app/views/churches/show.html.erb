script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<h1><%= @church.name %></h1>

<div class="pull-right">
  <%= render partial: 'favorites/favorite', locals: { church: @church } %>
</div>


<% if can? :edit, @post %>
  <div class="pull-right">
  <%= link_to "Edit", edit_church_path(@church), class: 'btn btn-block btn-default' %>
  
	<%= link_to "Delete", @church, method: :delete, class: 'btn btn-large btn-block btn-danger', confirm: 'Are you sure you want to delete this church?' %>
 	</div>
<% end %>
<p>Located in: <%= @church.city %></p>

<p>Description: <%= @church.description %></p>

<p><%= @church.tag_list %></p>
	<p>Denomination: <%= @church.denomination_list %></p>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
	handler = Gmaps.build('Google');
	handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
	  markers = handler.addMarkerss(<%=raw @hash.to_json %>);
	  handler.bounds.extendWith(markers);
	  handler.fitMapToBounds();
	});
</script>
			  

