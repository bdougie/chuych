<div id="churches" class="js-masonry">
  <% @churches.each do |church| %>
    <div class="box panel">
      <%= link_to image_tag(church.image.url(:medium)), church %>
      <div class="panel-body">
        <strong><%= link_to church.name, church %></strong>
        <%= church.description %><br/>
      </div>
    </div>
  <% end %>
</div>
