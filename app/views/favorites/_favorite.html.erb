<div class="favorite">
	<% binding.pry %>
    <% if favorite = current_user.favorited(church) %>
      <%= link_to [church, favorite], class: 'btn btn-small', method: :delete do %>
        <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Unfavorite
      <% end %>
    <% else %>
      <%= link_to [church, Favorite.new], class: 'btn btn-small', method: :post do %>
        <i class="glyphicon glyphicon-star"> </i>&nbsp; Favorite
      <% end %>
    <% end %>
</div>