<%= form_for post do |f| %>
	<div class="form-group">
    <%= f.label :body, 'Add to conversation' %>
    <%= f.text_field :body, class: "form-control", placeholder: 'How was church?' %>
  </div>

<div class="form-group">
    <%= f.label :body, 'Add to conversation' %>
    <%= f.text_field :body, rows: 4, class: "form-control", placeholder: 'How was church?' %>
  </div>

  
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>